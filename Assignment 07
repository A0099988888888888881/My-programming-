#include <stdio.h>

int main() {
    float radius, area;
    const float PI = 3.14159;  // defining PI as a constant

    // Input radius
    printf("Enter the radius of the circle: ");
    scanf("%f", &radius);

    // Calculate area
    area = PI * radius * radius;

    // Output result
    printf("Area of the circle = %.2f\n", area);

    return 0;
}
